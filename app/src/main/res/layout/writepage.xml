<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="613dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <LinearLayout
            android:id="@+id/add_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/imageButton_1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/image_" />

            <ImageButton
                android:id="@+id/imageButton_2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/image_" />

            <ImageButton
                android:id="@+id/imageButton_3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/image_" />

            <ImageButton
                android:id="@+id/imageButton_4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/image_" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="상품명"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="상품명을 입력해주세요."
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:id="@+id/item_detail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_detail"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:text="상세설명"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="상세설명을 입력해주세요."
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="가격"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="가격을 입력해주세요."
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:id="@+id/item_place"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_place"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="위치"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="위치를 입력해주세요."
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:paddingLeft="165dp"
            android:paddingTop="5dp"
            android:paddingRight="165dp"
            android:paddingBottom="5dp"
            android:text="필터"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/item_filter"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filter_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:paddingLeft="30dp"
                    android:paddingTop="3dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="3dp"/>

                <CheckBox
                    android:id="@+id/cb_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여성" />

                <CheckBox
                    android:id="@+id/cb_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="남성" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filter_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:paddingLeft="30dp"
                    android:paddingTop="3dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="3dp"/>

                <CheckBox
                    android:id="@+id/cb_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10대" />

                <CheckBox
                    android:id="@+id/cb_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20대" />

                <CheckBox
                    android:id="@+id/cb_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30대" />

                <CheckBox
                    android:id="@+id/cb_40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="40대 이상" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filter_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:paddingLeft="30dp"
                    android:paddingTop="3dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="3dp"/>

                <CheckBox
                    android:id="@+id/cb_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="우리동네 사람만" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filter_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="3dp"
                    android:text="게시목적"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/cb_sell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="중고 거래" />

                <CheckBox
                    android:id="@+id/cb_eat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나눠 먹기" />

                <CheckBox
                    android:id="@+id/cb_groupbuying"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공동구매" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_add"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#3589F1"
        android:text="등록하기"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>